<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ActivityTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen"></style>

    <style name="MainTheme">
        <item name="android:background">@drawable/background_puzzle</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/shape_dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="SerifFontStyle">
        <item name="android:typeface">serif</item>
    </style>

    <style name="SerifFontStyle.DiffOptionStyle">
        <item name="android:background">@drawable/shape_rounditem</item>
        <item name="android:paddingTop">15dip</item>
        <item name="android:paddingBottom">15dip</item>
        <item name="android:layout_marginTop">20dip</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SerifFontStyle.ResultButtonStyle">
        <item name="android:background">@drawable/shape_rounditem</item>
        <item name="android:paddingTop">15dip</item>
        <item name="android:paddingBottom">15dip</item>
        <item name="android:layout_marginTop">20dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SerifFontStyle.StartButtonStyle">
        <item name="android:background">@drawable/shape_rounditem</item>
        <item name="android:paddingTop">7dip</item>
        <item name="android:paddingBottom">7dip</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SerifFontStyle.DiffOptionNameStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">10dip</item>
    </style>

    <style name="SerifFontStyle.DiffOptionRecordStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <style name="SerifFontStyle.ToolsButtonStyle">
        <item name="android:background">@drawable/shape_rounditem</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <style name="SerifFontStyle.ResultDialogButtonStyle">
        <item name="android:background">@drawable/shape_rounditem</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

     <style name="SerifFontStyle.ToolsTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="SerifFontStyle.ToolsNumStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SerifFontStyle.ResultTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SerifFontStyle.TimeCostTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SerifFontStyle.DiffItemStyle">
        <item name="android:gravity">center</item>
    </style>

    <style name="SerifFontStyle.DiffItemButtonStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_rounditem</item>
        <item name="android:padding">5dip</item>
        <item name="android:layout_height">@dimen/diff_button_widthandheight</item>
        <item name="android:layout_width">@dimen/diff_button_widthandheight</item>
    </style>

    <style name="SerifFontStyle.DiffItemTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dip</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SerifFontStyle.SoundsCheckStyle">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>