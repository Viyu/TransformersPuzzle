<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_start_c"
    android:orientation="vertical"
    android:paddingLeft="15dip"
    android:paddingRight="15dip" >

    <Button
        android:id="@+id/startboard_startplay"
        style="@style/SerifFontStyle.StartButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:text="@string/text_start" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/startboard_soundcheck"
            style="@style/SerifFontStyle.SoundsCheckStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:text="@string/setting_yinxiao" />

        <CheckBox
            android:id="@+id/startboard_vibratecheck"
            style="@style/SerifFontStyle.SoundsCheckStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="@string/setting_zhengdong" />
    </LinearLayout>

</LinearLayout>